<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.payton.assembly">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".opening"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Assembly"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".createEvents"
            android:theme="@style/AppTheme"
            android:label="Create Events"
            android:noHistory="true"/>
        <activity android:name=".joinEvents"
            android:theme="@style/AppTheme"
            android:label="Join Events"
            android:noHistory="true"/>
        <activity android:name=".codeGenerator"
            android:noHistory="true"/>
        <activity android:name=".login"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity android:name=".signup"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity android:name=".MyEvents"
            android:theme="@style/AppTheme"
            android:label="My Events"
            android:noHistory="true"/>
        <activity android:name=".MainPage"
            android:theme="@style/AppTheme"
            android:label="Upcoming Events"
            android:noHistory="true"/>
        <activity android:name=".CreatedDisplay"
            android:theme="@style/AppTheme"
            android:label="Created Events"
            android:noHistory="true"/>
        <activity android:name=".JoinedDisplay"
            android:theme="@style/AppTheme"
            android:label="Joined Events"
            android:noHistory="true"/>
        <activity android:name=".editEvents"
            android:theme="@style/AppTheme"
            android:label="Edit Event"
            android:noHistory="true"/>
        <activity android:name=".Delete"
            android:theme="@style/AppTheme"
            android:label="Delete/Leave Event"
            android:noHistory="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@font/josefin_sans" />
    </application>

</manifest>